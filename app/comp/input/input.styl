@import '../defs'

.input
  margin-top 3rem
  $height = 50px
  .main
    background darken($cyan, 60%)
    border-bottom 2px solid darken($cyan, 20%)
    position relative
    input
      width 100%
      height $height
      background transparent
      font-size 22px
      padding 0 1rem 0 1rem
      color $cyan
      font-family monospace
      font-weight 100
      &::-webkit-input-placeholder
        color darken($cyan, 50%)
    .status
      height $height
      line-height $height
      position absolute
      top 50%
      right 1rem
      text-align center
      .icon
        border-radius 3em
        display block
        $isize = $height / 2
        height $isize
        width $isize
        line-height $isize
        margin-top -($isize / 2)
      .icon-check
        background $cyan
        color black
        font-size 0.9em

@import './defs'

// minimal reset
*
  padding: 0
  margin: 0
  border: 0
html
  box-sizing: border-box
  font-smoothing: antialiased
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: subpixel-antialiased
  font()
  font-size: 18px
  line-height: 20px
  background black
  color: $white
*, *:before, *:after
  box-sizing: inherit
html, body, #applayout
  height: 100%

.container
  max-width: 42rem
  padding 0 1rem 6rem 1rem
  margin: 0 auto
  margin-top: 2rem

*:focus
  outline none

table
  width 100%

.date
  color $green
  font-weight 400

 .sum
   color $pink
   font-weight 400

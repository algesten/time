@import './defs'

// minimal reset
*
  padding: 0
  margin: 0
  border: 0
html
  box-sizing: border-box
  font-smoothing: antialiased
  text-rendering: optimizeLegibility
  -webkit-font-smoothing: subpixel-antialiased
  font()
  font-size: 18px
  line-height: 20px
  background black
  color: $white
*, *:before, *:after
  box-sizing: inherit
html, body, #applayout
  height: 100%

.container
  max-width: 800px
  padding-bottom: 100px
  min-height: 100%
  margin: 0 auto
  margin-top: 60px
  margin-bottom 60px
  > div
    @media(min-width: 450px)
      margin-left 40px
      margin-right 40px

*:focus
  outline none

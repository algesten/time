
height = 2.8rem

.interpret > div
  display: flex
  flex-flow column
  > * > *
    padding 0 9px
  .main
    position: relative
    line-height: height
    font-size: 14px
    height height
    display: flex
    .input-holder
      flex 1
    .project-id
      width: 5rem
    .client-id
      width: 5rem
    .time
      width: 5rem
    .state
      width: 1.5rem
      margin-left: -1.5rem
  .sub
    border-top: solid 1px #e0e0e0
    height (height / 3)
    line-height: (height / 3)
    font-size: 0.6em
    display: flex
    .date
      width: 6rem
    .project-title
      flex 1
      text-align right
    .client-title
      min-width 10rem
      margin-left: 1rem

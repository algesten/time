.entrylist
  list-style none
  .totaltime
    display inline-block
    padding-left 16px
    font-size 12px
    color: #888
  > li
    padding-left 7px
    margin-top 40px
    font-size: 18px
    line-height: 1.6em
    > ol
      margin-left -7px
      list-style none
      .delete
        line-height 50px
      li
        border-bottom: 1px solid #e0e0e0
      li.entry
        > *
          padding 0 9px
          line-height: 50px
          height: 50px
        margin 0
        font-size: 14px
        display: flex
        .title
          flex-grow: 1
          overflow: hidden
        .project-title
          color #888
          font-size 12px
          display none
          @media(min-width: 450px)
            display block
        .project-id
          width: 90px
        .time
          width: 80px
        &:hover
          background: #fafafa

.delete
  margin-left: -25px
  float: left
  font-size 0.9rem
  color: #cf3b39

@import './defs'

.nav
  min-width 320px
  display flex
  margin-left 5px
  margin-top -50px
  @media(min-width: 450px)
    margin-top -40px
  > a
    noselect()
    border-radius 20px
    color $purple
    text-decoration none
    text-align center
    display inline-block
    line-height 60px
    height 60px
    text-transform lowercase
    line-height 40px
    height 40px
    padding 0 7px 0 3px
    margin-right 10px
    &:last-child
      margin-right 0
    @media(min-width: 450px)
      margin-right: 15px
      font-weight 400
      padding 0 15px 0 10px
    &.selected
      color black
      background $purple
    > .icon
      display inline-block
      padding-right 4px
    position relative

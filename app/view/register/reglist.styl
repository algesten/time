@import '../defs'

.reglist.reportlist
  margin-top 10px
  .section
    padding 10px 10px 0px 10px
    margin 30px 0 0 0
    cursor pointer
  .section.others
    font-style italic
  .section .delete
    margin-left -35px
  .clnt
    width 150px
    padding-left 0
    color $green
  .ptitle
    color $pink
  .proj
    padding-left 30px
    width 160px
    color $cyan
  li > ol > li
    padding-top 5px
    padding-bottom 5px
    cursor pointer
  li > ol > li:first-child
    padding-top 10px
  input
    font-size 14px
    font-family: monospace
    color: $white
    font-size: 16px
    font-weight 100
    background black
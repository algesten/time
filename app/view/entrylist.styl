.entrylist
  margin-right: 9px;
  margin-left: 9px;
  list-style none
  .totaltime
    display inline-block
    padding-left 16px
    font-size 12px
    color: #888
  > li
    margin-top 40px
    font-size: 18px
    line-height: 1.6em
    > ol
      li.entry
        font-size: 14px
        line-height: 2.8rem
        border-bottom: 1px solid #e0e0e0
        margin 0 -9px
        padding 0 9px
        display: flex
        .title
          flex-grow: 1
        .time
          padding-left: 20px
          margin-right 40px
        &:hover
          background: #fafafa

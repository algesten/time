.entrylist
  list-style none
  .totaltime
    display inline-block
    padding-left 16px
    font-size 12px
    color: #888
  > li
    margin-top 40px
    font-size: 18px
    line-height: 1.6em
    > ol
      list-style none
      li
        border-bottom: 1px solid #e0e0e0
      li.entry
        > *
          padding 0 9px
          line-height: 2.8rem
          height: 2.8rem
        margin 0
        font-size: 14px
        display: flex
        .title
          flex-grow: 1
        .project-id
          width: 5rem
        .time
          width: 5rem
        &:hover
          background: #fafafa
